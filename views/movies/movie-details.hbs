<h2>Details about {{movieDetails.title}}</h2>

<p>GENRE: {{movieDetails.genre}}</p>
<p>PLOT: {{movieDetails.plot}}</p>

{{#each movieDetails.cast}}

  <p>{{this.name}}</p>
  <p>{{this.occupation}}</p>
  <p>{{this.catchPhrase}}</p>

{{/each}}

<form action="/movies/{{movieDetails._id}}/delete" method="post">
  <button>DELETE MOVIE</button>
</form>

<form action="/movies/{{movieDetails._id}}/edit" method="get">
  <button>EDIT MOVIE</button>
</form>